<p id="notice"><%= notice %></p>

<h1>Clientes Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes_produtos.each do |clientes_produto| %>
      <tr>
        <td><%= clientes_produto.produto.nome %></td>
        <td><%= clientes_produto.cliente.nome %></td>
        <td><%= link_to 'Show', clientes_produto %></td>
        <td><%= link_to 'Edit', edit_clientes_produto_path(clientes_produto) %></td>
        <td><%= link_to 'Destroy', clientes_produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

